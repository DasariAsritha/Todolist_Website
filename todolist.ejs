</form>
<div class="box2">
      <form action="delete-data" method="get">
        <ul>
          <h1 align="center"><i class="fa-solid fa-list-check"></i> TASKS LIST</h1>
          <hr style="width:36.1%;text-align:left;margin-left:33%;height:3px;border-width:0;color:black;background-color:black">
          <br>
            <table class="table2">
              
                <tr class="row3">
                  <th style="font-size: 25;padding-right: 35;">Check</th>
                  <th style="font-size: 25;padding-right: 35;">Description</th>
                  <th style="font-size: 25;padding-right: 35;">Category</th>
                <th style="font-size: 25;padding-right: 35;">Due date</th>
                <th style="font-size: 25;padding-right: 35;">Due time</th>

                </tr>
                <td colspan="5">
                  <hr style="height:3px;border-width:0;color:gray;background-color:gray;text-align:left;margin-left:0;">
              </td>
                <% for(let i of data) { %>
                    <tr class="row4">
                      
                      <td style="font-size: 20;"> <input  style="height: 20px;width: 20px;"type="checkbox" name="<%= i._id %>" ></td>
                      <td style="font-size: 20;"> <p><%= i.description %> <sub>
                       
                      
                      </sub></p></td>
                     
                      </td>
                      <td style="font-size: 20;"> <% if((i.category) == "category"){%>
                        <div> <button style="background-color:rgb(40, 203, 212); width: 70px; height: 40px;">No Category</button></div>
                       <%} else{%>
                        <div><button style="background-color: rgb(248, 147, 164); width: 70px; height: 30px;"><%= i.category %></button></div>
                        <%}%></td>
                      <td style="font-size: 20;"> <% if((i.duedate) == ""){%>
                        <div>
                          <p>No Deadline</p> </div>
                       <%}else{%>
                        <div><%= i.duedate %></div>
                       
                        <%}%></td>
                        <div><td style="font-size: 20;"><% if((i.duetime) == ""){%>
                          <div>
                            <p>No Time</p> </div>
                         <%}else{%>
                          <div><%= i.duetime %></div>
                         
                          <%}%>
                        </div>
                    </tr>
                    <td colspan="5">
                    <hr style="height:1px;border-width:0;">
                </td>
                <% } %>
            </table>
           
            <br>
            <button type="submit" class="delete" style="color: white; font-size: large;"><i class="fa-solid fa-trash" style="color: white
            ;"></i>  DELETE TASKS</button>
        </ul>
     </form>      
    </div>

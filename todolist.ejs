<form action="/add-data" method = "post">
<table class="table" align="center">
          <tr class="row1">
          <th style="font-size: 25;padding-right: 20;"id="cat"><i class="fa-solid fa-pencil"></i>Description  </th>
          <th style="font-size: 25;padding-right: 20;" ><i class="fa-regular fa-object-ungroup"></i>Category </th>
